<form method="POST" enctype="multipart/form-data"  id="form-principal">
    <div class="input-group mb-3">
        <input type="text" class="form-control" placeholder="Titulo propiedad" aria-label="Tituloprop"
            name="titulo">
    </div>

    <div class="input-group mb-3">
        <span class="input-group-text">Descripcion</span>
        <textarea type="text-area" class="form-control" aria-label="Descripcion" name="descripcion"> </textarea>
    </div>

    <div class="input-group mb-3">
        <input type="file" name="image" accept="image/*" multiple>
    </div>

    <div class="input-group mb-3">
        <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown"
            aria-expanded="false">MONEDA</button>
        <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="#">ARS</a></li>
            <li><a class="dropdown-item" href="#">USD</a></li>
            <li>
                <hr class="dropdown-divider">
            </li>
        </ul>
        <input type="text" class="form-control" aria-label="Text input with dropdown button">
    </div>
    <h4 class="text-center">Caracteristicas de la propiedad</h4>
    <div class="input-group mb-3 d-flex flex-wrap">
        <div class="d-flex flex-wrap ">
            <label class="m-1" for="">Zona</label>
            <input type="text" class="form-control" name="zona-form">
        </div>

        <div class="d-flex flex-wrap">
            <label class="m-1" for="">Superficie total</label>
            <input type="text" class="form-control" name="superficie-total">

        </div>

        <div class="d-flex flex-wrap">
            <label class="m-1" for="">Suerficie total cubierta</label>
            <input type="text" class="form-control" name="superficie-cubierta">

        </div>


        <div class="d-flex flex-wrap">
            <label class="m-1" for="">Valor</label>
            <input type="text" class="form-control" name="valor-form">
        </div>

        <div class="d-flex flex-wrap">
            <label class="m-1" for="">Tipo de vista</label>
            <input type="text" class="form-control" name="tipo-vista-form">
        </div>


        <div class="d-flex flex-wrap">
            <label class="m-1" for="">Diposicion</label>
            <input type="text" class="form-control" name="disposicion-form">
        </div>



        <div class="d-flex flex-wrap">
            <label class="m-1" for="">Direccion</label>
            <input type="text" class="form-control" name="direccion-form">
        </div>

        <div class="d-flex flex-wrap">
            <label class="m-1" for="">Domitorios</label>
            <input type="text" class="form-control" name="dormitorios-form">
        </div>

        <div class="d-flex flex-wrap">
            <label class="m-1" for="">Tipo de propiedad</label>
            <input type="text" class="form-control" name="tipo-propiedad-form">
        </div>

        <div class="d-flex flex-wrap">
            <label class="m-1">Balcon</label>
            <input type="text" class="form-control" name="balcon-form">
        </div>

        <div class="select m-2 d-flex flex-column">
            <label for="">Forma de pago</label>
            <select class="btn btn-primary" name="forma-pago" id="">
                <option value="Contado">Contado</option>
                <option value="Cuotas">Cuotas</option>
                <option value="Transferencia">Transferencia</option>
                <option value="Otra">Otra</option>
            </select>
        </div>
        <div class="select m-2 d-flex flex-column">
            <label for="">Ba√±o</label>
            <select class="btn btn-primary" name="banio" id="">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
            </select>
        </div>

        <div class="select m-2 d-flex flex-column">
            <label for="">Ambientes</label>
            <select class="btn btn-primary" name="ambientes" id="">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
            </select>
        </div>

        <div class="select m-2 d-flex flex-column">
            <label for="">Tipo de operacion</label>
            <select class="btn btn-primary" name="tipo-operacion" id="">
                <option value="Alquiler 12 meses">Alquiler 12 meses</option>
                <option value="Alquiler 24 meses">Alquiler 24 meses</option>
                <option value="Alquiler 36 meses">Alquiler 36 meses</option>
                <option value="Alquiler estudiantes">Alquiler estudiantes</option>
                <option value="Venta">Venta</option>
            </select>
        </div>
    </div>

    <button class="btn btn-custom-enviar" id="btn-enviar" type="submit">Enviar</button>

</form>